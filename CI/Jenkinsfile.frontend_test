pipeline {
    agent any

    environment {
        GITHUB_CREDENTIALS_ID = 'github_token' // Set your GitHub credentials ID
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout scmGit(
                        branches: [[name: 'dev']],
                        extensions: [],
                        userRemoteConfigs: [[
                            credentialsId: "${env.GITHUB_CREDENTIALS_ID}", // Use env prefix for clarity
                            url: 'https://github.com/TelwareSW/telware-frontend.git'
                        ]]
                    )
                }
            }
        }

        stage('Run tests') {
            steps {
                sh 'npm install' // Installs dependencies
                sh 'npm test'    // Runs tests
            }
        }
    }

    post {
        success {
            githubCheck(
                context: 'Build and Test',
                conclusion: 'success',
                detailsURL: env.BUILD_URL, // Link to the build
                output: [
                    title: 'Build Passed',
                    summary: 'All checks passed successfully!'
                ]
            )
        }
        failure {
            githubCheck(
                context: 'Build and Test',
                conclusion: 'failure',
                detailsURL: env.BUILD_URL, // Link to the build
                output: [
                    title: 'Build Failed',
                    summary: 'Tests failed. Please check the Jenkins logs.'
                ]
            )
        }
    }
}
